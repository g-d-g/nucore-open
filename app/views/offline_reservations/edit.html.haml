= content_for :h1 do
  = current_facility

= content_for :sidebar do
  = render "admin/shared/sidenav_product", sidenav_tab: "instruments"

= content_for :tabnav do
  = render "admin/shared/tabnav_product", secondary_tab: "reservations"

%h2= @instrument

= simple_form_for([@instrument, @reservation], url: facility_instrument_offline_reservation_path) do |f|
  = f.error_messages
  = f.input :admin_note, input_html: { class: "span6" }

  .clearfix
  %ul.inline
    %li= f.submit t(".update"), class: "btn btn-primary"
    %li= link_to t("shared.cancel"), facility_instrument_schedule_path
